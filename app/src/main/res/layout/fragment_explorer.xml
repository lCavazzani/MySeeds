<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
   >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/campanha_title">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:text="Campanhas"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal"
                    android:textColor="#80000000"
                    android:gravity="end"
                    android:text="Ver todas"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <!--<megaleios.com.myseeds.Components.SmoothRecyclerView-->
                <!--android:layout_below="@+id/campanha_title"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/background_card"-->
                <!--android:paddingLeft="2dp"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:paddingRight="2dp"-->
                <!--android:stretchMode="columnWidth"-->
                <!--android:verticalSpacing="2dp"-->
                <!--android:id="@+id/campanhas_list"/>-->
            <android.support.v7.widget.CardView
                android:id="@+id/campanhas_list"
                android:layout_below="@+id/campanha_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_material_light"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textmy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:text="Colchão para acampamento" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textmy"
                        android:layout_margin="16dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressBar"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#ec407a"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="R$ 120,80 de R$ 500,00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textColor="#80000000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:text="Até 14/11/2017"
                        android:layout_below="@+id/progressBar"
                        android:layout_toEndOf="@+id/textView2" />

                    <View
                        android:id="@+id/divider_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textView"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="#EEE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_title"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:text="Igreja Batista de Água Branca"
                        android:id="@+id/textView2" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_below="@+id/campanhas_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#000000"
                android:text="Instituições"
                android:layout_marginTop="16dp"
                />
        </RelativeLayout>


</RelativeLayout>