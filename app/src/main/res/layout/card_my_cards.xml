<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <android.support.v7.widget.CardView
        android:id="@+id/campanhas_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@+id/campanha_title"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/button_material_light"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:foregroundGravity="center"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textmy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:text="VISA"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressBar"
                android:layout_alignEnd="@+id/progressBar"
                android:layout_alignRight="@+id/progressBar"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#ec407a"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Excluir" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/progressBar"
                android:layout_alignTop="@+id/textmy"
                android:src="@drawable/fav"
                android:visibility="gone" />

            <TextView
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textmy"
                android:layout_margin="16dp"
                android:text="Número do Cartão" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="**** **** **** 1234"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#80000000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="Nome" />

                    <TextView
                        android:id="@+id/name_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:text="Debora Ferreira" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#80000000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="Validade" />

                    <TextView
                        android:id="@+id/date_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:text="12/34" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>