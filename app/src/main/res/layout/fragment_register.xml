<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/perfil"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="Nome Completo"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="Data de nascimento"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_cpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cpf"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="CPF"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tel"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="Celular"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/senha_2"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#80000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/senha_2"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="Confirmar senha"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="#80000000"
                    android:textSize="16sp"
                    android:theme="@style/EditTextAppearance" />

            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/check_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Aceito os termos de uso"/>

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_default"
                android:fontFamily="sans-serif-medium"
                android:text="Entrar"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>