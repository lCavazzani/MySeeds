<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/campanhas_list"
        android:layout_below="@+id/campaign_list"
        android:layout_width="335dp"
        android:layout_height="140dp"
        android:background="@color/button_material_light"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="8dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/campaign_id"
            android:visibility="gone"/>
            <TextView
                android:id="@+id/textmy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Colchão para acampamento"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fav"
                android:layout_alignTop="@+id/textmy"
                android:layout_alignEnd="@+id/button"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textmy"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:text="Até 14/11/2017"
                android:textColor="#80000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_end"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="R$ 120,80 de R$ 500,00"
                android:textColor="#ec407a"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider_title"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@+id/date_end"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="#EEE" />
            <EditText
                android:layout_width="85dp"
                android:layout_height="46dp"
                android:hint="CONTRIBUIR"
                android:textSize="12dp"
                android:textColorHint="#8945d1"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/divider_title"
                android:padding="8dp"
                android:imeOptions="actionDone"
                android:textColor="#8945d1"
                android:maxLength="6"
                android:textAlignment="center"
                android:background="@drawable/button_contribuir_purple"
                android:layout_marginBottom="16dp"
                android:id="@+id/button"
                android:layout_toRightOf="@+id/divider_title" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>