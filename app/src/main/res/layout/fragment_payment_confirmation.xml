<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headline"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#000000"
                android:text="Hillsong"
                android:id="@+id/textView4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#80000000"
                android:text="Villaggio JK, Rua Funchal 500 - Vila..."
                android:layout_below="@+id/textView4"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/headline">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/list"/>
            <Spinner
                android:id="@+id/spinner_contribuir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#80000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textStyle="normal"
                android:entries="@array/contribuir"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:layout_marginStart="8dp" />
            <Spinner
                android:id="@+id/spinner_contribuir_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#80000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textStyle="normal"
                android:entries="@array/contribuir_tempo"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>
             <Spinner
                android:id="@+id/spinner_cartoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#80000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textStyle="normal"
                android:entries="@array/cartoes"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:layout_marginStart="8dp" />

            <EditText
                android:id="@+id/add_comentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:hint="Adicionar comentário"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="#80000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <CheckBox
                android:id="@+id/check_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:text="Contribuição anônima"
                android:layout_marginBottom="72dp"
                />
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_contribuir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/gradient_purple_pink"
        android:fontFamily="sans-serif-medium"
        android:text="CONTRIBUIR"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:textStyle="normal" />
</RelativeLayout>