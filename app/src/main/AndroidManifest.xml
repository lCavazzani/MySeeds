<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="megaleios.com.myseeds">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Domains.SplashScreen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Domains.Main.Activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Domains.Register.Activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGrey.NoActionBar"/>
        <activity
            android:name=".Domains.Forgot.Activity.ForgotActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Domains.Login.Activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Domains.Instituicao.Activity.InstituicaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGrey.NoActionBar"
            />
        <activity
        android:name=".Domains.FinishedPayment.Activity.FinishedPaymentActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppThemeGrey.NoActionBar"
        />
        <activity
            android:name=".Domains.PaymentConfirm.Activity.PaymentConfirmActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGrey.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize"

            />
    </application>

</manifest>